{
  "name": "@ulixee/platform",
  "description": "The internal developer environment that we use for building and running the Ulixee platform",
  "homepage": "https://ulixee.org",
  "repository": "git@github.com:ulixee/platform.git",
  "bugs": {
    "url": "https://github.com/ulixee/platform/issues"
  },
  "license": "MIT",
  "author": "Data Liberation Foundation",
  "contributors": [
    "Caleb Clark",
    "Blake Byrnes"
  ],
  "engines": {
    "node": ">=16"
  },
  "private": true,
  "scripts": {
    "dist": "lerna publish from-package"
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  },
  "workspaces": {
    "packages": [
      "desktop/main",
      "desktop/core",
      "desktop/interfaces",
      "datastore/*",
      "datastore/plugins/*",
      "cloud/*",
      "sql/*",
      "cli",
      "playgrounds/*",
      "specification"
    ],
    "nohoist": [
      "**/babel-loader",
      "**/electron-webpack",
      "**/@electron",
      "**/@electron/**",
      "**/electron",
      "**/electron-*",
      "**/electron-builder",
      "**/electron-webpack/**",
      "**/@ulixee/repo-tools",
      "**/@vue/**",
      "**/@vue/**/**",
      "**/vue",
      "**/vue-loader",
      "**/vue-template-compiler",
      "**/vue-class-component",
      "**/@types/web",
      "**/autoprefixer",
      "**/postcss",
      "**/tailwindcss",
      "**/@nodelib",
      "**/@nodelib/**"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "resolutions": {
    "tough-cookie": "^4.0.0",
    "**/ua-parser-js": "0.7.28"
  },
  "dependencies": {}
}