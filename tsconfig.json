{
  "extends": "@ulixee/repo-tools/tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./build",
    "moduleResolution": "node",
    "module": "CommonJS",
  },
  "references": [
    {
      "path": "specification/tsconfig.json",
    },
  ],
  "include": [
    "cloud",
    "end-to-end",
    "end-to-end/*.json",
    "desktop",
    "datastore",
    "datastore/packager/*.json",
    "sql",
    "client",
    "utils",
    "schema",
    "cli",
    "cloud/**/*.json",
    "./*.js",
    "./*.json",
    ".eslintrc.js",
  ],
  "exclude": [
    "**/tsconfig*.json",
    "build/**/*",
    "**/build/**/*",
    "**/build-dist/**/*",
    "node_modules",
    "**/node_modules",
    "specification",
    "hero/**",
    "datastore/docpage/src",
    "datastore/broker-admin",
    "datastore/packager/test/assets/*",
    "assets",
    "test/datastores",
    "**/website",
    "**/docs",
    "**/*.d.ts",
    "**/*.mjs",
  ],
}
